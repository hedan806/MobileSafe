<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_green_A200</item>
    </style>

    <style name="Theme.Design" parent="Base.Theme.Design">
    </style>

    <style name="Base.Theme.Design" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <!--<item name="android:windowBackground">@color/window_background</item>-->
    </style>

    <style name="text_title_style">
        <item name="android:textColor" >@color/textcolor</item>
        <item name="android:textSize">27sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_info_style">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor" >@color/textcolor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>
    <style name="text_li_style">
        <item name="android:textColor">@color/lost_main_color</item>
        <item name="android:color">@color/lost_main_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="img_list_style">
        <item name="android:src">@android:drawable/btn_star_big_on</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="img_status_on_style">
        <item name="android:src">@android:drawable/presence_online</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="img_status_off_style">
        <item name="android:src">@android:drawable/presence_invisible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <color name="window_background">#fff5f5f5</color>
</resources>
